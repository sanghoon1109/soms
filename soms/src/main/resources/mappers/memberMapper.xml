<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="member">

	<insert id="insertMember" parameterType="MemberDTO">
		INSERT INTO MEMBER(
			MEMBER_ID,
			MEMBER_NM,
			PASSWD
		) VALUES(
			#{memberId},
			#{memberNm},
			#{passwd}
		)
	</insert>
	
	<select id="selectOneMember" parameterType="MemberDTO" resultType="MemberDTO">
		SELECT 
				*
		FROM
				MEMBER
		WHERE
				MEMBER_ID = #{memberId}
	</select>
	
	<select id="selectCheckMemberId" parameterType="String" resultType="String">
		SELECT
				*
		FROM
				MEMBER
		WHERE
				MEMBER_ID = #{memberId}
	</select>
	
	<select id="selectOnePasswd" parameterType="MemberDTO" resultType="String">
		SELECT
				PASSWD
		FROM
				MEMBER
		WHERE
				MEMBER_ID = #{memberId}
	</select>
	
	<delete id="deleteMember" parameterType="String">
		DELETE FROM
				MEMBER
		WHERE
				MEMBER_ID = #{memberId}				
	</delete>
	

</mapper>